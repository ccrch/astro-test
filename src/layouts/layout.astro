---
const { title } = Astro.props

import '../styles/styles.scss'
// import RunScripts from '../scripts/RunScripts'

const now = new Date()
const date = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}${String(now.getDate()).padStart(2, '0')}-${String(now.getHours()).padStart(2, '0')}${String(now.getMinutes()).padStart(2, '0')}`
---

<script>
  import { initScripts } from '../scripts/scripts'
  
  initScripts()

  const bla = () => {
    document.querySelector('.vh-test > div[data-vh] + p').textContent = `100vh - ${document.querySelector<HTMLElement>('.vh-test > div[data-vh]').offsetHeight}px`
    document.querySelector('.vh-test > div[data-dvh] + p').textContent = `100dvh - ${document.querySelector<HTMLElement>('.vh-test > div[data-dvh]').offsetHeight}px`
    document.querySelector('.vh-test > div[data-svh] + p').textContent = `100svh - ${document.querySelector<HTMLElement>('.vh-test > div[data-svh]').offsetHeight}px`
      document.querySelector('.vh-test > div[data-svh-2] + p').textContent = `100svh - visual vh - ${window.visualViewport?.height}px`
  }

  bla()
  window.addEventListener('resize', bla)
  window.addEventListener('scroll', bla)
</script>

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf-8'>
    <meta name='author' content='Ccrch'>
    <meta name='robots' content='noindex, nofollow'>
    <meta name='viewport' content='width=device-width, initial-scale=1, viewport-fit=cover'>
    <meta http-equiv='Cache-Control' content='no-cache, no-store, must-revalidate'>
    <meta http-equiv='Pragma' content='no-cache'>
    <meta http-equiv='Expires' content='0'>
    <link rel='preconnect' href='https://fonts.googleapis.com'>
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin>
    <link href='https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap' rel='stylesheet'>
    <title>{title}</title>
  </head>
  <body>
    <main>
      <div class='date'>{date}</div>
      <div class='vh-test'>
        <div data-vh></div><p></p>
        <div data-dvh></div><p></p>
        <div data-svh></div><p></p>
        <div data-svh-2></div><p></p>
      </div>
      <slot />
    </main>
    <!-- <RunScripts client:load /> -->
    <div class='lines'>
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
  </body>
</html>
